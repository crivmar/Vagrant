# interfaces(5) file used by ifup(8) and ifdown(8)
# Include files from /etc/network/interfaces.d:
source-directory /etc/network/interfaces.d

# The loopback network interface
auto lo
iface lo inet loopback
    #elimina la ruta por defecto de mantenimiento#
    post-up ip route del default dev $IFACE || true 

# The primary network interface
allow-hotplug eth0
iface eth0 inet dhcp
#VAGRANT-BEGIN
# The contents below are automatically generated by Vagrant. Do not modify.
auto eth1
iface eth1 inet dhcp
    #a√±adida la regla de iptables para cambiar la ruta por defecto#
    post-up iptables -t nat -A POSTROUTING -s {{dir_red_privada}} -o {{interfaz_router}} -j MASQUERADE
#VAGRANT-END

#VAGRANT-BEGIN
# The contents below are automatically generated by Vagrant. Do not modify.
auto eth2
iface eth2 inet static
      address {{router_privada}}
      netmask {{router_mascara}}
#VAGRANT-END